{
  "manifest_version": 3,
  "name": "Word Collector",
  "version": "1.0",
  "description": "Collect and learn English words while browsing.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tts"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "*://*.dictionaryapi.dev/*",
    "*://*.youdao.com/*",
    "*://translate.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}